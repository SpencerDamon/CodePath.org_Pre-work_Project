<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/tv_margin_horizontal"
        android:layout_marginTop="@dimen/tv_margin_top"
        android:text="@string/tv_spencer_intro"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewKotlinMascot" />

    <ImageView
        android:id="@+id/imageViewKotlinMascot"
        android:layout_width="@dimen/iv_width"
        android:layout_height="@dimen/iv_height"
        android:layout_marginTop="@dimen/iv_margin_top"
        android:contentDescription="@string/kotlin_mascot"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kotlin_mascot_3d_5" />

    <Button
        android:id="@+id/button_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_intro_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIntro" />

</androidx.constraintlayout.widget.ConstraintLayout>